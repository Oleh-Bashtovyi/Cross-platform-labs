@model DiveSiteResponse
@{
    ViewData["Title"] = "Dive Site Details - V1";
}

<h1>Dive Site Details - Api version: 1.0</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Dive Site Name: @(Model.DiveSiteName ?? "N/a")</h5>
        <p class="card-text">Description: @(Model.DiveSiteDescription ?? "N/a")</p>
        <p class="card-text">Other Details: @(Model.OtherDetails ?? "N/a")</p>
        <a asp-controller="DiveSites" asp-action="IndexV1" class="btn btn-secondary">Back to List</a>
    </div>
</div>
